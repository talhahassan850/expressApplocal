extends ../layout
block content 
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/product/add", class="btn btn-success float-right") Add New Product
    table.table
        thead
            tr
                th code
                th size
                th price
                th stuff
                th action
        tbody
             each item in product
                tr
                    td=item.code
                    td=item.size
                    td=item.price
                    td=item.stuff
                    td
                        a(href="/product/delete/"+item._id, class="btn btn-danger") Delete
                        a(href="/product/edit/"+item._id, class="btn btn-warning") Edit